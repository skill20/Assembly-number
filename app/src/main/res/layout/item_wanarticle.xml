<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/wan_article_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:longClickable="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/card_share_overflow_code"
                android:layout_alignParentRight="true"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/title_codearticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/card_share_overflow_code"
                android:textIsSelectable="false"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="最新博文"/>
            <TextView
                android:id="@+id/text_author_article"
                android:layout_below="@+id/title_codearticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="作者："/>
            <TextView
                android:id="@+id/text_class_wanarticle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="分类:"
                android:layout_toRightOf="@id/text_author_article"
                android:layout_below="@id/title_codearticle"/>
            <LinearLayout
                android:id="@+id/linear_article"
                android:background="@android:color/transparent"
                android:layout_below="@+id/text_author_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_createtime_wanarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="时间" />
                <me.next.tagview.TagCloudView
                    android:id="@+id/tag_wanarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:tcvBackground="@drawable/tag_article_background"
                    card_view:tcvTextColor="@color/color_movie_cast"
                    card_view:tcvItemBorderHorizontal="8dp"
                    card_view:tcvItemBorderVertical="6dp"
                    card_view:tcvBorder="4dp"
                    card_view:tcvSingleLine="false"
                    card_view:tcvCanTagClick="false">
                </me.next.tagview.TagCloudView>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>