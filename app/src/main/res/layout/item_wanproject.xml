<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:id="@+id/wan_project_card"
        android:clickable="true"
        android:longClickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <ImageView
                android:id="@+id/card_share_overflow_code_project"
                android:layout_alignParentRight="true"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <ImageView
                android:id="@+id/image_project"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/card_share_overflow_code_project"
                />
            <TextView
                android:id="@+id/title_codeproject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/image_project"
                android:textIsSelectable="false"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="最新博文"/>
            <TextView
                android:id="@+id/dec_codeproject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_codeproject"
                android:layout_toLeftOf="@id/image_project"
                android:padding="8dp"
                android:textSize="12sp"
                android:text="详情"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>